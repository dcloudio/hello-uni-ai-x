<!-- 网络链接内容展示页（uni-id-pages-x中用于展示隐私政策协议内容） -->
<template>
	<web-view class="web-view" v-if="url.length != 0" :src="url"></web-view>
</template>

<script>
	export default {
		onLoad(param) {
			const url = param["url"] as string;
			let title = param["title"] as string;
			// console.log('url', url);
			if (url.substring(0, 4) != 'http') {
				uni.showModal({
					title: "错误",
					content: '不是一个有效的网站链接,' + '"' + url + '"',
					showCancel: false,
					confirmText: "知道了",
					complete: () => {
						uni.navigateBack()
					}
				});
				title = "页面路径错误"
			} else {
				this.url = url;
			}
			if (title.length != 0) {
				uni.setNavigationBarTitle({ title });
			}
		},
		data() {
			return {
				url: ""
			};
		}
	}
</script>
<style>
	.web-view {
		width: 750rpx;
		flex: 1;
		height: 100%;
	}
</style>
