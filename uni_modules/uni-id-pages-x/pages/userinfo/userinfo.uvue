  .list .item.deactivate {
    margin-top: 20px;
    border-top: 0.1px solid #EEE;
  }

  .list .item .title {
    font-size: 14px;
    flex: 1;
    color: #333;
  }

  .list .item .content {
    flex-direction: row;
